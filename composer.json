{
    "name": "prooph/event-store-doctrine-adapter",
    "description": "Doctrine Adapter for ProophEventStore",
    "homepage": "https://github.com/prooph/event-store-doctrine-adapter",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Jan Sorgalla",
            "email": "jan.sorgalla@dotsunited.de",
            "homepage": "http://dotsunited.de"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/dbal": "~2.1",
        "zendframework/zend-serializer" : "~2.3",
        "beberlei/assert": "~2.0"
    },
    "require-dev": {
        "prooph/event-store": "dev-0.5-dev",
        "phpunit/phpunit": "3.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStore\\Adapter\\Doctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Prooph\\EventStoreTest\\": "vendor/prooph/event-store/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
